      <span class="client-actions">
        <%= link_to 'Editar', edit_client_path(client) %>
        |
        <%= link_to 'Eliminar', client_path(client), method: :delete, data: { confirm: 'Â¿EstÃ¡s seguro?' }, class: 'eliminar' %>
